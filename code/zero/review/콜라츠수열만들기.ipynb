    "def solution(n):\n",
    "    nums = [n]\n",
    "    while n>1:\n",
    "        if n%2==0:\n",
    "            n//=2\n",
    "        else:\n",
    "            n=3*n+1\n",
    "        nums.append(n)\n",
    "    return nums\n",
    "\n",
    "solution(10)"
   ]
  }
